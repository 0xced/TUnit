<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\TUnit.Assertions\TUnit.Assertions.csproj" />
      <ProjectReference Include="..\TUnit.Engine\TUnit.Engine.csproj" />
    </ItemGroup>
    
    <ItemGroup Condition="'$(GITHUB_ACTIONS)' != 'true'">
        <ProjectReference Include="..\TUnit.Analyzers\TUnit.Analyzers\TUnit.Analyzers.csproj"
                          OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
    </ItemGroup>

    <ItemGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
        <ProjectReference Include="..\TUnit.Analyzers\TUnit.Analyzers\TUnit.Analyzers.csproj" />
    </ItemGroup>
    
    <ItemGroup>
        <ProjectCapability Remove="TestContainer" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="TUnit.props">
            <Pack>true</Pack>
            <PackagePath>buildTransitive/$(TargetFramework)/</PackagePath>
        </Content>
    </ItemGroup>

</Project>
