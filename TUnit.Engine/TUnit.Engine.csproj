<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
    </PropertyGroup>
    
    <PropertyGroup Condition="'$(Configuration)' == 'Debug' and '$(LaunchDebugger)' != ''">
        <DefineConstants>LAUNCH_DEBUGGER</DefineConstants>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="AsyncSemaphore" Version="1.2.2" />
        <PackageReference Include="EnumerableAsyncProcessor" Version="1.3.2" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
        <PackageReference Include="Microsoft.Testing.Extensions.CodeCoverage" Version="17.11.3" />
        <PackageReference Include="Microsoft.Testing.Extensions.TrxReport" Version="1.3.2" />
        <PackageReference Include="Microsoft.Testing.Platform" Version="1.3.2" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="TUnit.Engine.props">
            <Pack>true</Pack>
            <PackagePath>buildTransitive/$(TargetFramework)/</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\TUnit.Core\TUnit.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsPackTarget)' != 'true'">
        <ProjectReference Include="..\TUnit.Engine.SourceGenerator\TUnit.Engine.SourceGenerator.csproj"
                          OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
    </ItemGroup>

    <ItemGroup Condition="'$(IsPackTarget)' == 'true'">
        <ProjectReference Include="..\TUnit.Engine.SourceGenerator\TUnit.Engine.SourceGenerator.csproj" />
        <PackageReference Include="Microsoft.Testing.Platform.MSBuild" Version="1.3.2" />
    </ItemGroup>

</Project>
